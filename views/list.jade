doctype
html(lang="en")
head
  meta(charset="UTF-8")
  link(rel="stylesheet", href="/styles/reset.css")    
  link(rel="stylesheet", href="/styles/styles.css")
  script(type="text/javascript", src="http://code.jquery.com/jquery-2.1.1.min.js")
  script(src="/js/todo.js")
  title List
body
  h1 Things To Do
  div.middle_wrapper
    div.list_container
      ul
        each item in todos
          li
            div.listitem
              input.checkbox(type="checkbox", name="is_done", data-todo-id="#{item._id}", data-checked="#{item.is_done}")
              a(href="/todos/#{item._id}/edit")
                h2.title= item.title
              form(action="/todos/#{item._id}?_method=DELETE", method="POST")
                button.delete x
            p.description= item.description
  div.new_button
    a.new(href="/new_todo") New
      