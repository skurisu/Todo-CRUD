doctype
html(lang="en")
head
  meta(charset="UTF-8")
  title new_todo
body
  h1 EDIT TODO
  form( action="/todos/#{todo._id}?_method=PUT", method="POST")
    fieldset
      div.todo_title Title
        label(for="title") 
        br
        input(type="text", name="title", value="#{todo.title}")
      div.todo_description Description
        br
        label(for="description")
        input(type="text", name="description", value="#{todo.description}") 
      div.created_at
        input(type="hidden", name="created_at", value="") 
      div.is_done
        input(type="hidden", name="is_done")
      div.save
        button save