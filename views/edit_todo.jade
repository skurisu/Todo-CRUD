doctype
html(lang="en")
head
  link(rel="stylesheet", href="/styles/reset.css")    
  link(rel="stylesheet", href="/styles/styles.css")
  meta(charset="UTF-8")
  title new_todo
body
  div.middle_wrapper
    h1 EDIT TODO
    form( action="/todos/#{todo._id}?_method=PUT", method="POST")
      fieldset
        div.todo_title Title
          label(for="title") 
          br
          input(type="text", name="title", value="#{todo.title}")
        div.todo_description Description
          br
          label(for="description")
          textarea(name="description")= todo.description 
        div.created_at
          input(type="hidden", name="created_at", value="") 
        div.is_done
          input(type="hidden", name="is_done")
        div.save
          button save